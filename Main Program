import java.util.*; //Kasama na dito yung random class

//Custom Java Color Code
//Specifically to add variability to our chatbox or dialogue boxes.
class Color {
    public static final String RESET  = "\u001B[0m";
    public static final String BLACK  = "\033[0;30m";   // BLACK
    public static final String RED    = "\033[0;31m";     // RED
    public static final String GREEN  = "\033[0;32m";   // GREEN
    public static final String YELLOW = "\033[0;33m";  // YELLOW
    public static final String BLUE   = "\033[0;34m";    // BLUE
    public static final String PURPLE = "\033[0;35m";  // PURPLE
    public static final String CYAN   = "\033[0;36m";    // CYAN
}

//Parent Class of Both Bots which will inherit its variables which will be used later
class Bot{
    String name;
    int health;
    int minDmg;
    int maxDmg;
    double critChance;
    double dodgeChance;
    double missChance;

    Bot(){
        this.name        = "";
        this.health      = 400;
        this.minDmg      = 5;
        this.maxDmg      = 20;
        this.critChance  = 0.4;
        this.dodgeChance = 0.2;
        this.missChance  = 0.2;
    }
}

//Player Bot which details are edited by the user itself. Its variables are inherited from the Bot class
//But only the name and health are needed for its details everything else are constants.
class PlayerBot extends Bot{
    public void setName(String name){
        this.name = name;
    }

    public void setClass(String className){
        switch(className.toLowerCase()){
            case "warrior":
                this.health = 100;
                this.minDmg = 5;
                this.maxDmg = 15;   //Dapat random siya per loop, gamitin mo yung random class par [SRP]
                this.critChance = 0;
                this.missChance = 0;
                break;

            case "tank":
                this.health = 200;
                this.minDmg = 5;
                this.maxDmg = 10;    //Dapat random siya per loop, gamitin mo yung random class par [SRP]
                this.critChance = 0;
                this.missChance = 0;
                break;

            case "assassin":
                this.health = 80;
                this.minDmg = 15;
                this.maxDmg = 20;     //Dapat random siya per loop, gamitin mo yung random class par [SRP]
                this.critChance = 0;  //calculate mo per loop par [SRP]
                this.missChance = 0;
                break;

            case "mage":
                this.health = 80;
                this.minDmg = 25;
                this.maxDmg = 40;      //Dapat random siya per loop, gamitin mo yung random class par [SRP]
                this.critChance = 0;   //calculate mo per loop par [SRP]
                this.missChance = 0;
                break;
        }
    }
}

//Enemy Bot which details are edited by the user itself. Its variables are inherited from the Bot class
//But only the name and health are needed for its details everything else are constants.
class EnemyBot extends Bot{
    public void setBossType(String bossType){
        switch(bossType.toLowerCase()){
            case "Genesis":

            case "Shaun":

            case "Ancheta":

            case "Alcantara":
        }
    }
}

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        PlayerBot playerBot = new PlayerBot();
        EnemyBot enemyBot = new EnemyBot();

        int choice = 0;

        //Do-while loop for the entire main program so that it still runs after the game ends and prompts the user
        //To play again? Or to end the game.
        do{
            //Our Main Menu, prompting the user to start the game or exit the game
            System.out.println(Color.CYAN   + "|===================================|" + Color.RESET);
            System.out.println(Color.YELLOW + "|          War of the Bots          |" + Color.RESET);
            System.out.println(Color.CYAN   + "|===================================|" + Color.RESET);
            System.out.println(Color.PURPLE + "|           1. Start Game           |" + Color.RESET);
            System.out.println(Color.PURPLE + "|           2. Exit Game            |" + Color.RESET);
            System.out.println(Color.CYAN   + "|===================================|" + Color.RESET);
            System.out.println(Color.RED    + "          What Shall It Be?          " + Color.RESET);
            System.out.print(Color.RED      +"              > " + Color.RESET);
            choice = scanner.nextInt();
            scanner.nextLine();

            //Actions that depends on what choice the user has typed for the input
            switch(choice){
                //Our Game when user wants to start the game
                case 1:
                    //User Bot Details
                    System.out.println(Color.CYAN   + "|===================================|" + Color.RESET);
                    System.out.println(Color.YELLOW + "       What Shall Be Your Name?      " + Color.RESET);
                    System.out.print(Color.RED      +"              > " + Color.RESET);
                    playerBot.setName(scanner.nextLine());
                    System.out.println(Color.CYAN   + "|===================================|" + Color.RESET);
                    System.out.println(Color.YELLOW + "|     What Shall Be Your Class?     |" + Color.RESET);
                    System.out.println(Color.PURPLE + "|              Warrior              |" + Color.RESET);
                    System.out.println(Color.PURPLE + "|             Assassin              |" + Color.RESET);
                    System.out.println(Color.PURPLE + "|               Tank                |" + Color.RESET);
                    System.out.println(Color.PURPLE + "|               Mage                |" + Color.RESET);
                    System.out.println(Color.CYAN   + "|===================================|" + Color.RESET);
                    System.out.print(Color.RED      + "             > " + Color.RESET);
                    playerBot.setClass(scanner.nextLine());

                    //Enemy Bot Details
                    System.out.println(Color.CYAN   + "|===================================|" + Color.RESET);
                    System.out.println(Color.YELLOW + "|    Whom Shall Be Your Opponent?   |" + Color.RESET);
                    System.out.println(Color.PURPLE + "|              Shaun                |" + Color.RESET);
                    System.out.println(Color.PURPLE + "|             Genesis               |" + Color.RESET);
                    System.out.println(Color.PURPLE + "|             Ancheta               |" + Color.RESET);
                    System.out.println(Color.PURPLE + "|            Alcantara              |" + Color.RESET);
                    System.out.println(Color.CYAN   + "|===================================|" + Color.RESET);
                    System.out.println(Color.PURPLE + "| Most Difficult from Top to Bottom |" + Color.RESET);
                    System.out.print(Color.RED      + "             > " + Color.RESET);
                    enemyBot.setBossType(scanner.nextLine());
                    System.out.println(Color.CYAN   + "|===================================|" + Color.RESET);

                    //-----------------------Lagay Nalangz Dito Yung Battle Loop-------------------------//

                //Ending Message before the user exits the game
                case 2:
                    System.out.println(Color.CYAN   + "|===================================|" + Color.RESET);
                    System.out.println(Color.YELLOW + "|        Thank You For Playing      |" + Color.RESET);
                    System.out.println(Color.CYAN   + "|===================================|" + Color.RESET);
                    break;

                //Error Message, choice = 1 so that the menu is prompted again after being
                //Evaluated by the do-while loop
                default:
                    System.out.println(Color.CYAN   + "|===================================|" + Color.RESET);
                    System.out.println(Color.YELLOW + "|            Invalid Input          |" + Color.RESET);
                    System.out.println(Color.CYAN   + "|===================================|" + Color.RESET);
                    choice = 1;
            }
        }while(choice!=2);
    }
}
